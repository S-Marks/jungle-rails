<% if current_user && review.user == current_user %>
<dd>
  <h4><i><b>YOUR REVIEW
        <%= link_to fa_icon('trash'), product_review_url(params[:id], review), class: 'label-danger label', method: :delete %></b></i>
  </h4>
</dd>
<% else %>
<dd>
  <h4><i><b><%= review.user.name.upcase%></b></i></h4>
</dd>
<% end %>
<dd><% review.rating.times { %>
  <span class="fa fa-star"></span>
  <% } %> </span>
<dd><%= review.description %></dd>