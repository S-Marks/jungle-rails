<section class="admin-categories-new">

  <header class="page-header">
    <h1>ADMIN &raquo; NEW CATEGORY</h1>
  </header>

  <div class="well">
    <%= link_to 'ALL PRODUCTS', [:admin, :categories], class: 'btn btn-info' %>
  </div>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
      <%= form_for [:admin, @category] do |form| %>

      <% if form.object.errors.any? %>
      <div class="alert alert-danger">
        <strong>The following errors prevented saving:</strong>
        <ul>
          <% form.object.errors.full_messages.each do |error| %>
          <li><%= error %></li>
          <% end %>
        </ul>
      </div>
      <% end %>

      <div class="form-group">
        <%= form.text_field :name, class: 'form-control', placeholder: "CATEGORY NAME"%>
      </div>

      <%= form.submit 'CREATE', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>

</section>